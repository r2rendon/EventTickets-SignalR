@page
    <div class="container">
        <div class="row">
            <div class="col-2">
                User
            </div>
            <div class="col-4">
                <input type="text" id="userInput" />
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                Message
            </div>
            <div class="col-4">
                <input type="text" id="messageInput" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <input class="btn btn-success" type="button" id="sendMessage" value="Send Message" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <ul id="messageList">
                </ul>
            </div>
        </div>
    </div>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>